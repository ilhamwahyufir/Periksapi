<body>
  <div class="main-wrap">

    
    <%- include('../partials/admin/sidebar', { activeMenu: 'relasi', userName: userName }) %>

    
    <div class="main-area">

     
      <%- include('../partials/admin/topbar', { pageTitle: pageTitle || 'Edit Aturan', userName: userName }) %>

      <div class="container">
        <div class="card">

          <div class="card-header">
            <h3>Edit Aturan Relasi</h3>
          </div>

          <div class="card-body">

            <form action="/admin/relasi/update/<%= relasi.id_relasi %>" method="POST">

              <div class="form-group">
                <label>ID Relasi</label>
                <div>
                  <span class="id-display">#<%= relasi.id_relasi %></span>
                </div>
                <small>ID tidak dapat diubah</small>
              </div>

              <div class="form-group">
                <label for="id_penyakit">Penyakit <span style="color: #dc3545;">*</span></label>
                <select id="id_penyakit" name="id_penyakit" required>
                  <option value="">-- Pilih Penyakit --</option>
                  <% if (penyakit && penyakit.length) { %>
                    <% penyakit.forEach(p => { %>
                      <option value="<%= p.id_penyakit %>" <%= p.id_penyakit === relasi.id_penyakit ? 'selected' : '' %>>
                        <%= p.nama_penyakit %>
                      </option>
                    <% }) %>
                  <% } %>
                </select>
              </div>

              <div class="form-group">
                <label for="id_gejala">Gejala <span style="color: #dc3545;">*</span></label>
                <select id="id_gejala" name="id_gejala" required>
                  <option value="">-- Pilih Gejala --</option>
                  <% if (gejala && gejala.length) { %>
                    <% gejala.forEach(g => { %>
                      <option value="<%= g.id_gejala %>" <%= g.id_gejala === relasi.id_gejala ? 'selected' : '' %>>
                        <%= g.nama_gejala %>
                      </option>
                    <% }) %>
                  <% } %>
                </select>
              </div>

              <div class="form-group">
                <label for="cf">Nilai CF (Certainty Factor) <span style="color: #dc3545;">*</span></label>
                <input 
                  type="number" 
                  id="cf" 
                  name="cf" 
                  step="0.01" 
                  min="0" 
                  max="1" 
                  value="<%= relasi.cf %>" 
                  placeholder="0.75" 
                  required 
                />
                <small>Masukkan nilai antara 0 sampai 1 (contoh: 0.75 untuk 75%)</small>
              </div>

              <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                  Simpan Perubahan
                </button>
                <a href="/admin/relasi" class="btn btn-secondary">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                  </svg>
                  Batal
                </a>
              </div>

            </form>

          </div>

        </div>
      </div>

    </div>
  </div>

</body>
</html> -->