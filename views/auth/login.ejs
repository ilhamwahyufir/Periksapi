<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - PERIKSAPI</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #e0f7fa 0%, #f1f8e9 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-container {
            width: 100%;
            max-width: 1000px;
            display: grid;
            grid-template-columns: 1fr 1fr;
            background: white;
            border-radius: 30px;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0,0,0,0.15);
        }

        /* Left Side - Branding */
        .left-side {
            background: linear-gradient(135deg, #00897b 0%, #00695c 100%);
            padding: 60px 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: white;
            position: relative;
            overflow: hidden;
        }

        .left-side::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -20%;
            width: 400px;
            height: 400px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
        }

        .left-side::after {
            content: '';
            position: absolute;
            bottom: -30%;
            left: -10%;
            width: 300px;
            height: 300px;
            background: rgba(255,255,255,0.05);
            border-radius: 50%;
        }

        .brand-logo {
            width: 120px;
            height: 120px;
            background: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 4rem;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            position: relative;
            z-index: 1;
        }

        .brand-name {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 15px;
            position: relative;
            z-index: 1;
        }

        .brand-tagline {
            font-size: 1.2rem;
            text-align: center;
            opacity: 0.9;
            line-height: 1.6;
            position: relative;
            z-index: 1;
            max-width: 300px;
        }

        .feature-list {
            margin-top: 40px;
            list-style: none;
            padding: 0;
            position: relative;
            z-index: 1;
        }

        .feature-list li {
            padding: 10px 0;
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 1rem;
        }

        .feature-list li::before {
            content: "‚úì";
            font-weight: bold;
            font-size: 1.2rem;
        }

        /* Right Side - Login Form */
        .right-side {
            padding: 60px 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .form-header {
            margin-bottom: 40px;
        }

        .form-header h2 {
            font-size: 2rem;
            font-weight: 800;
            color: #333;
            margin-bottom: 10px;
        }

        .form-header p {
            color: #666;
            font-size: 1rem;
        }

        /* Alert Error */
        .alert-error {
            background: #ffebee;
            border: 2px solid #ef5350;
            border-radius: 12px;
            padding: 15px 20px;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 10px;
            color: #c62828;
            font-weight: 500;
        }

        .alert-icon {
            font-size: 1.5rem;
        }

        /* Form Group */
        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
            display: block;
            font-size: 0.95rem;
        }

        .form-input {
            width: 100%;
            padding: 15px 20px;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s;
            background: #f8f9fa;
        }

        .form-input:focus {
            outline: none;
            border-color: #00897b;
            background: white;
            box-shadow: 0 0 0 4px rgba(0,137,123,0.1);
        }

        /* Role Selection */
        .role-selection {
            margin-bottom: 30px;
        }

        .role-selection p {
            font-weight: 600;
            color: #333;
            margin-bottom: 15px;
            font-size: 0.95rem;
        }

        .role-buttons {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
        }

        .btn-role {
            padding: 15px 20px;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            background: #f8f9fa;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 8px;
        }

        .btn-role input[type="radio"] {
            display: none;
        }

        .btn-role:hover {
            border-color: #00897b;
            background: #e0f7fa;
            transform: translateY(-2px);
        }

        .btn-role input[type="radio"]:checked ~ .role-icon,
        .btn-role input[type="radio"]:checked ~ .role-text {
            color: #00897b;
        }

        .btn-role.active {
            border-color: #00897b;
            background: #e0f7fa;
            box-shadow: 0 5px 15px rgba(0,137,123,0.2);
        }

        .role-icon {
            font-size: 2rem;
            transition: all 0.3s;
        }

        .role-text {
            font-size: 0.95rem;
            color: #555;
            transition: all 0.3s;
        }

        /* Submit Button */
        .btn-submit {
            width: 100%;
            padding: 16px;
            background: linear-gradient(135deg, #00897b 0%, #00695c 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 1.1rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 8px 20px rgba(0,137,123,0.3);
            margin-bottom: 20px;
        }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 30px rgba(0,137,123,0.4);
        }

        .btn-submit:active {
            transform: translateY(0);
        }

        /* Links */
        .form-links {
            text-align: center;
        }

        .form-links a {
            color: #00897b;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
        }

        .form-links a:hover {
            color: #00695c;
            text-decoration: underline;
        }

        .divider {
            text-align: center;
            margin: 20px 0;
            color: #999;
            font-size: 0.9rem;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .login-container {
                grid-template-columns: 1fr;
                max-width: 500px;
            }

            .left-side {
                padding: 40px 30px;
            }

            .brand-logo {
                width: 80px;
                height: 80px;
                font-size: 3rem;
            }

            .brand-name {
                font-size: 2rem;
            }

            .brand-tagline {
                font-size: 1rem;
            }

            .feature-list {
                display: none;
            }

            .right-side {
                padding: 40px 30px;
            }

            .form-header h2 {
                font-size: 1.5rem;
            }

            .role-buttons {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>

    <div class="login-container">
        <!-- Left Side - Branding -->
        <div class="left-side">
            <div class="brand-logo">üêÑ</div>
            <div class="brand-name">PERIKSAPI</div>
            <div class="brand-tagline">
                Sistem Pakar Diagnosa Penyakit Sapi Berbasis AI
            </div>
            <ul class="feature-list">
                <li>Diagnosa Cepat & Akurat</li>
                <li>Expert System AI</li>
                <li>Riwayat Lengkap</li>
                <li>Mudah Digunakan</li>
            </ul>
        </div>

        <!-- Right Side - Login Form -->
        <div class="right-side">
            <div class="form-header">
                <h2>Selamat Datang! üëã</h2>
                <p>Silakan login untuk melanjutkan</p>
            </div>

            <% if (error) { %>
                <div class="alert-error">
                    <span class="alert-icon">‚ö†Ô∏è</span>
                    <span><%= error %></span>
                </div>
            <% } %>

            <form action="/auth" method="POST" id="loginForm">
                <!-- Email Input -->
                <div class="form-group">
                    <label class="form-label">üìß Email</label>
                    <input type="email" 
                           name="email" 
                           class="form-input" 
                           placeholder="contoh@email.com"
                           required
                           autocomplete="email">
                </div>

                <!-- Password Input -->
                <div class="form-group">
                    <label class="form-label">üîí Password</label>
                    <input type="password" 
                           name="password" 
                           class="form-input" 
                           placeholder="Masukkan password"
                           required
                           autocomplete="current-password">
                </div>

                <!-- Role Selection -->
                <div class="role-selection">
                    <p>Pilih Role Login:</p>
                    <div class="role-buttons">
                        <label class="btn-role" id="roleUser">
                            <input type="radio" name="role" value="user" checked>
                            <span class="role-icon">üë§</span>
                            <span class="role-text">Login sebagai User</span>
                        </label>
                        <label class="btn-role" id="roleAdmin">
                            <input type="radio" name="role" value="admin">
                            <span class="role-icon">üë®‚Äçüíº</span>
                            <span class="role-text">Login sebagai Admin</span>
                        </label>
                    </div>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn-submit">
                    üöÄ Masuk Sekarang
                </button>

                <!-- Links -->
                <div class="form-links">
                    <p>Belum punya akun? <a href="/register">Daftar di sini</a></p>
                    <div class="divider">atau</div>
                    <a href="/">‚¨Ö Kembali ke Beranda</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Role button active state
        const roleButtons = document.querySelectorAll('.btn-role');
        const radioButtons = document.querySelectorAll('input[name="role"]');

        // Set initial active state
        document.getElementById('roleUser').classList.add('active');

        roleButtons.forEach((btn, index) => {
            btn.addEventListener('click', function() {
                // Remove active from all
                roleButtons.forEach(b => b.classList.remove('active'));
                // Add active to clicked
                this.classList.add('active');
                // Check the radio
                radioButtons[index].checked = true;
            });
        });

        // Prevent form submission if no role selected (extra validation)
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            const roleSelected = document.querySelector('input[name="role"]:checked');
            if (!roleSelected) {
                e.preventDefault();
                alert('‚ö†Ô∏è Pilih role login terlebih dahulu!');
            }
        });
    </script>

</body>
</html>